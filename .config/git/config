
[core]
  autocrlf = false

[alias]
	l = log --all --color --decorate --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	up = checkout
	ci = commit
	m = merge --no-ff --no-commit
  p = pull --no-ff --no-commit
	r = restore --staged --worktree .
	s = status

