
[advice]
  statusHints = false

[core]
  autocrlf = false

[alias]
	graph = log --oneline --graph --all --pretty='format:%d%h (%as) [%an] %s' # --grep='^<<hidden>>' --notes --invert-grep
  up = git pull --no-commit
	ci = commit
  co = checkout
	m = merge --no-ff --no-commit
  p = pull --no-commit
	rev = restore --staged --worktree .
	d = diff
	s = status --short --untracked-files=no
  x = ls-files --others --exclude-standard

