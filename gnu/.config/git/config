
[advice]
  statusHints = false

[core]
  autocrlf = false

[alias]
	g = log --graph --all --pretty='format:%h%d (%cs) [%an] %s'
	l = log --first-parent --pretty='format:%h%d (%cs) [%an] %s'
  up = git pull --no-commit
	ci = commit
  co = checkout
	m = merge --no-ff --no-commit
  p = push
	r = restore --staged --worktree .
	d = diff
	s = status --short --untracked-files=no
  x = ls-files --others --directory --exclude-standard

